<layout version="0.1.0">
    <default>
        <!-- update layout for all frontend page -->
    </default>
    <solutionpartner_index_index>
        <reference name="content">
            <block type="solutionpartner/solutionpartner" name="solutionpartner" template="solutionpartner/solutionpartner.phtml" />
        </reference>
    </solutionpartner_index_index>

    <customer_account>
        <!-- Magestore_SolutionPartner -->
        <reference name="customer_account_navigation">
            <action method="addLink" helper="solutionpartner/data/getEnableModule" translate="label" module="solutionpartner">
                <name>solutionpartner</name>
                <path>solutionpartner/customer</path>
                <label>Solution Partner</label>
            </action>
        </reference>
    </customer_account>

    <solutionpartner_default>
        <update handle="page_two_columns_left_acc" />
        <reference name="head">
            <action method="addCss" ifconfig="solutionpartner/general/enable">
                <styleSheet>magestore/solutionpartner/css/solutionpartner_default.css</styleSheet>
            </action>
        </reference>
        <reference name="left">
            <!-- <remove name="discount-on-top"/> -->
            <remove name="interview"/>
            <remove name="reviewsdisplay"/>
            <remove name="lifetime-support-and-money-back"/>
            <remove name="tags_popular"/>
            <remove name="brandingbox"/>
            <remove name="interview1"/>
            <remove name="weexcept"/>
            <remove name="promotions"/>
            <remove name="reviewsdisplaynames"/>
            <remove name="catalog.compare.sidebar"/>
            <remove name="sale.reorder.sidebar"/>
            <remove name="cart_sidebar"/>
            <block type="solutionpartner/customer_navigation" ifconfig="solutionpartner/general/enable" befor="-" name="solutionpartner_navigator" template="solutionpartner/navigation.phtml">
                <action method="setNavigationTitle">
                    <title helper="solutionpartner/customer/getNavigationLabel" />
                </action>
                <action method="addLink" translate="label" module="solutionpartner">
                    <name>welcome</name>
                    <path>solutionpartner/customer</path>
                    <label>Welcome page</label>
                    <disabled>0</disabled>
                    <order>6</order>
                </action>
                <!-- <action method="addLink" translate="label" module="partner">
                    <name>news</name>
                    <path>partner/account/news</path>
                    <label>News</label>
                    <disabled helper="partner/account/customerIsNotPartner" />
                    <order>10</order>
                </action>
                <action method="addLink" translate="label" module="partner">
                    <name>resource</name>
                    <path>partner/account/resources</path>
                    <label>Resources</label>
                    <disabled helper="partner/account/customerIsNotPartner" />
                    <order>20</order>
                </action> -->
                <action method="addLink" translate="label" module="solutionpartner">
                    <name>reports</name>
                    <path>solutionpartner/customer/reports</path>
                    <label>Reports</label>
                    <disabled helper="solutionpartner/customer/customerIsNotPartner" />
                    <order>30</order>
                </action>
                <action method="addLink" translate="label" module="solutionpartner">
                    <name>setting</name>
                    <path>solutionpartner/customer/setting</path>
                    <label>Settings</label>
                    <disabled helper="solutionpartner/customer/customerIsNotPartner" />
                    <order>40</order>
                </action>
                <action method="addLink" translate="label" module="solutionpartner">
                    <name>back_account</name>
                    <path>customer/account/</path>
                    <label>Back To Account Dashboard</label>
                    <disabled>0</disabled>
                    <order>50</order>
                </action>
            </block>
            <block type="checkout/cart_sidebar" name="cart_sidebar" template="checkout/cart/sidebar.phtml">
                <action method="addItemRender"><type>simple</type><block>checkout/cart_item_renderer</block><template>checkout/cart/sidebar/default.phtml</template></action>
                <action method="addItemRender"><type>grouped</type><block>checkout/cart_item_renderer_grouped</block><template>checkout/cart/sidebar/default.phtml</template></action>
                <action method="addItemRender"><type>configurable</type><block>checkout/cart_item_renderer_configurable</block><template>checkout/cart/sidebar/default.phtml</template></action>
            </block>
        </reference>
    </solutionpartner_default>

    <solutionpartner_customer_index>
        <update handle="solutionpartner_default" />
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        <reference name="head" translate="title">
            <action method="setTitle">
                <title>Solution Partner</title>
            </action>
        </reference>
        <reference name="content">
            <block type="solutionpartner/customer_welcome" name="customer_welcome" ifconfig="solutionpartner/general/enable">
                <block type="core/template" name="solutionpartner_program" template="cms/content_heading.html"/>
            </block>
        </reference>
    </solutionpartner_customer_index>

    <solutionpartner_customer_reports>
        <update handle="solutionpartner_default" />
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        <reference name="head" translate="title">
            <action method="setTitle">
                <title>Reports</title>
            </action>
            <!-- <action method="removeItem">
                <type>js</type>
                <name>magestore/ajaxcart.js</name>
                <params />
            </action> -->
        </reference>
        <reference name="content">
            <block type="solutionpartner/customer_reports" name="customer_reports" template="solutionpartner/customer/reports.phtml">
                <block type="solutionpartner/customer_reports_miniform" name="customer_reports_miniform" template="solutionpartner/customer/reports/miniform.phtml" />
                <block type="solutionpartner/customer_reports_sales" name="customer_reports_sales" template="solutionpartner/customer/reports/sales.phtml" />
            </block>
        </reference>
    </solutionpartner_customer_reports>

    <solutionpartner_customer_setting>
