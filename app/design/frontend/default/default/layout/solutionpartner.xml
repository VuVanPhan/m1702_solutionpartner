            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        <reference name="head" translate="title">
            <action method="setTitle">
                <title>Setting</title>
            </action>
        </reference>
        <reference name="content">
            <block type="solutionpartner/customer_setting" name="solutionpartner-setting" template="solutionpartner/customer/setting.phtml" />
        </reference>
    </solutionpartner_customer_setting>

