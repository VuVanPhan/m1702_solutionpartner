    <solutionpartner_directory_partner>
        <label>Directory Solution Partner</label>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
        </reference>
        <reference name="head" translate="title">
            <action method="setTitle">
                <title>Solution Partner</title>
            </action>
        </reference>
        <reference name="left">

        </reference>
        <reference name="content">
            <block type="solutionpartner/directory_partner_view" name="directory.partner.view" template="solutionpartner/directory/partner/view.phtml">
                <block type="solutionpartner/directory_partner_view_media" name="directory.partner.view.media" as="media" template="solutionpartner/directory/partner/view/media.phtml"/>
            <block type="solutionpartner/directory_partner_view_description" name="directory.partner.view.description" as="description" template="solutionpartner/directory/partner/view/description.phtml"></block>
            </block>
        </reference>
    </solutionpartner_directory_partner>
</layout>