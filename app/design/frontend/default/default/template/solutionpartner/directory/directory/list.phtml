<?php
/**
 * Solution Partner list template
 *
 * @see Magestore_SolutionPartner_Block_Directory_List
 */
?>
<?php
$_solutionPartnerCollection=$this->getLoadedSolutionPartnerCollection();
$_helper = $this->helper('solutionpartner/output');
?>

<?php if(!$_solutionPartnerCollection->count()): ?>
    <p class="note-msg"><?php echo $this->__('There are no products matching the selection.') ?></p>
<?php else: ?>
    <div class="category-products">
        <?php
//        var_dump($this->getToolbarHtml());
//        die();
        ?>
        <?php echo $this->getToolbarHtml() ?>
        <?php // List mode ?>
        <?php if($this->getMode()!='grid'): ?>
            <?php $_iterator = 0; ?>
            <ol class="products-list solution-partner-list" id="products-list">
                <?php foreach ($_solutionPartnerCollection as $_solutionPartner): ?>
                    <li class="item<?php if( ++$_iterator == sizeof($_solutionPartnerCollection) ): ?> last<?php endif; ?>">
                        <?php // Product Image ?>
                        <a href="<?php echo $this->getUrl('*/*/partner', array('id' => $_solutionPartner->getSolutionpartnerId())) ?>" title="<?php echo $this->stripTags($_solutionPartner->getCompanyName(), null, true) ?>" class="product-image sp-company-logo"><img src="<?php echo $this->helper('solutionpartner/output')->resizeImg($_solutionPartner, 135, 135); ?>" width="135" height="135" alt="<?php echo $this->stripTags($_solutionPartner->getCompanyName(), null, true) ?>" /></a>
                        <?php // Product description ?>
                        <div class="product-shop">
                            <div class="f-fix">
                                <?php $_productNameStripped = $this->stripTags($_solutionPartner->getName(), null, true); ?>
                                <h2 class="product-name sp-name"><a href="<?php echo $this->getUrl('*/*/partner', array('id' => $_solutionPartner->getSolutionpartnerId())) ?>" title="<?php echo $_productNameStripped; ?>"><?php echo $_solutionPartner->getName(); ?></a></h2>
                                <div class="desc std">
                                    <?php echo $_helper->truncate($_solutionPartner->getDescription(), 150) ?>
                                    <a href="<?php  ?>" title="<?php echo $_productNameStripped ?>" class="link-learn"><?php echo $this->__('Learn More') ?></a>
                                </div>
                            </div>
                        </div>
                    </li>
                <?php endforeach; ?>
            </ol>
            <script type="text/javascript">decorateList('products-list', 'none-recursive')</script>

        <?php else: ?>

        <?php // Grid Mode ?>
            <?php $_collectionSize = $_solutionPartnerCollection->count() ?>
            <?php $_columnCount = $this->getColumnCount(); ?>
            <?php $i=0; foreach ($_solutionPartnerCollection as $_solutionPartner): ?>
            <?php

//            var_dump($_solutionPartner->getData());
//        var_dump($this->helper('solutionpartner/output')->resizeImg($_solutionPartner, 135, 135));

            ?>
                <?php if ($i++%$_columnCount==0): ?>
                    <ul class="products-grid solution-partner-list">
                <?php endif ?>
                <li class="item<?php if(($i-1)%$_columnCount==0): ?> first<?php elseif($i%$_columnCount==0): ?> last<?php endif; ?>">
                    <a href="<?php echo $this->getUrl('*/*/partner', array('id' => $_solutionPartner->getSolutionpartnerId())) ?>" title="<?php echo $this->stripTags($_solutionPartner->getCompanyName(), null, true) ?>" class="product-image"><img src="<?php echo $this->helper('solutionpartner/output')->resizeImg($_solutionPartner, 135, 135); ?>" width="135" height="135" alt="<?php echo $this->stripTags($_solutionPartner->getCompanyName(), null, true) ?>" /></a>
                    <h2 class="product-name"><a href="<?php echo $this->getUrl('*/*/partner', array('id' => $_solutionPartner->getSolutionpartnerId())) ?>" title="<?php echo $this->stripTags($_solutionPartner->getCompanyName(), null, true) ?>"><?php echo $_solutionPartner->getCompanyName() ?></a></h2>

<!--                    --><?php //if($_solutionPartner->getRatingSummary()): ?>
<!--                        --><?php //echo $this->getReviewsSummaryHtml($_solutionPartner, 'short') ?>
<!--                    --><?php //endif; ?>
<!--                    <div class="desc std">-->
<!--                        --><?php //echo $_helper->truncate($_solutionPartner->getDescription(), 150) ?>
<!--                        <a href="--><?php // ?><!--" title="--><?php //echo $_productNameStripped ?><!--" class="link-learn">--><?php //echo $this->__('Learn More') ?><!--</a>-->
<!--                    </div>-->
                </li>
                <?php if ($i%$_columnCount==0 || $i==$_collectionSize): ?>
                    </ul>
                <?php endif ?>
            <?php endforeach ?>
            <script type="text/javascript">decorateGeneric($$('ul.products-grid'), ['odd','even','first','last'])</script>
        <?php endif; ?>
    </div>
<?php endif; ?>
